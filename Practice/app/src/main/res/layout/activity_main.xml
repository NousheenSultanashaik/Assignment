<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="370dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/headerfornextassignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteY="5dp" />


    <ImageView
        android:id="@+id/minus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/minus"
        android:visibility="gone"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        tools:ignore="ContentDescription" />

    <TextView
            android:id="@+id/heading_users"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String27"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/edit_text"
            app:layout_constraintHorizontal_bias="0.629"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_text"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/String28"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/heading_users" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/minus"
        app:layout_constraintTop_toBottomOf="@+id/heading_users"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/person"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="88dp"
            android:layout_height="17dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String2"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading_users"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="88dp"
            android:layout_height="17dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String3"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="88dp"
            android:layout_height="14dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="47dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String6"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_text"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvBtechPassoutYear"
            android:layout_width="130dp"
            android:layout_height="14dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String7"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_text"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvDOB"
            android:layout_width="116dp"
            android:layout_height="14dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String17"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btech_passout_text"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/dateandtime"
            android:layout_width="113dp"
            android:layout_height="14dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/String18"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dob_text"
            tools:ignore="SpUsage" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="315dp"
            android:layout_height="147dp"
            android:layout_marginStart="50dp"
            tools:ignore="MissingConstraints" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/plusImageView"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_plus"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>

